@model Employee


<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <span><a class="btn btn-default" asp-action="Index">Back to List</a> <strong style="margin-left:50%" class="text-center">Employee</strong> </span>
    </div>

</div>
<hr />

<div class="row">
    <div class="col-md-8 col-md-offset-2">
          <div class="row">
            <div class="col-md-12">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group row">
                        <label asp-for="FirstName" class="control-label col-md-2"></label>
                        <div class="col-md-10">
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="form-group row">
                        <label asp-for="LastName" class="control-label col-md-2"></label>

                        <div class="col-md-10">
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="form-group row">
                        <label asp-for="Gender" class="control-label col-md-2"></label>
                        <div class="col-md-10">
                            <input asp-for="Gender" class="form-control" />
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="form-group row">
                        <label asp-for="Salary" class="control-label col-md-2"></label>
                        <div class="col-md-10">
                            <input asp-for="Salary" class="form-control" />
                            <span asp-validation-for="Salary" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <input style="float:right;" type="submit" value="Create" class="btn btn-primary" />
                        </div>

                    </div>
                </form>
            </div>
        </div>


    </div>

</div>




